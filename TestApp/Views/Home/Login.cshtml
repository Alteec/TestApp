﻿@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = "Login";
    var cultureList = locOptions.Value.SupportedUICultures;

}


@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _httpContext
@inject IOptions<RequestLocalizationOptions> locOptions
@inject IViewLocalizer _lang


<div id="wrapper">

	<!-- Main -->
	<div id="main">
        <h5 class="mbr-section-title mbr-fonts-style mb-2 display-5">
            <strong>@_lang["login"]</strong>
        </h5>
        <form asp-controller="Home" asp-action="Login" method="post">

            <div class="form-group">
                @Html.Label("email", "Email")
                @Html.TextBox("email", "", new { @class = "form-control", @type = "email", placeholder = "Email" })
                <small id="emailHelp">@_lang["note"]</small>
            </div>
            <div class="form-group">
                @Html.Label("password","Password")
                @Html.Password("password", "", new { @class = "form-control", placeholder = "Password"})

            </div>
            <div class="form-group">
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            </div>
            <button type="submit" class="button large">@_lang["submit"]</button>

        </form>
        <a asp-controller="Home" asp-action="SignUp">@_lang["signUp"]</a>
    </div>



</div>