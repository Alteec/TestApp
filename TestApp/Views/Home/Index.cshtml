						<a href="#" class="author"><img src="images/avatar.jpg" alt="" /></a>
					</header>
					<a href="single.html" class="image"><img src="images/pic01.jpg" alt="" /></a>
				</article>
			}
		</div>
	</section>

	<!-- Posts List -->
	<section>
		<ul class="posts">
						@for (int i = 0; i < 3; i++)
			{
				<li>
					<article>
						<header>
							<h3><a href="single.html">Lorem ipsum fermentum ut nisl vitae</a></h3>
