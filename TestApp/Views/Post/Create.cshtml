@using TestApp.Models.Enums
@using TestApp.ViewModels
@model CreatePostViewModel
@{
	
}
<section>
<h3>Form</h3>
<form method="post" asp-action="Create">
	<div class="row gtr-uniform">
		<div class="col-6 col-12-xsmall">
			<label asp-for="Title" >Title</label>
				<input asp-for="Title" placeholder="Title" />
				<span asp-validation-for="Title" class="text-danger"></span>


		</div>
		<div class="col-6 col-12">
				<label asp-for="Text">Text</label>
				<textarea asp-for="Text" placeholder="Text2" ></textarea>
				<span asp-validation-for="Text" class="text-danger"></span>

		</div>

		 <div class="col-12">
		 		<label asp-for="Category">Category</label>
				<select asp-for="Category" asp-items="@Html.GetEnumSelectList<Category>()"></select>


		 </div>
			<div class="col-6 col-12-xsmall">
				<label asp-for="Photo">Photo</label>
				<input asp-for="Photo" />
				<span asp-validation-for="Photo" class="text-danger"></span>

			</div>

		<div class="col-12">
				<input type="submit" value="Submit" />
		</div>
	</div>
</form>
</section>
